{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "downlevelIteration": true,
    "lib": ["dom", "es2019"],
    "strict": true,
    "strictFunctionTypes": false,
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "removeComments": true,
    "target": "es2015",
    "importHelpers": true,
    "noEmitHelpers": true,
    "noUnusedLocals": true,
    "baseUrl": "./",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*"],
}
